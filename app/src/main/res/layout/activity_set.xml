<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.Set">

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="#3B82F6"
        android:gravity="center_vertical"
        >

        <Button
            android:layout_width="119dp"
            android:layout_height="62dp"
            android:background="#3B82F6"
            android:drawableStart="@drawable/baseline_chevron_left_24"
            android:fontFamily="sans-serif-black"
            android:paddingHorizontal="20dp"
            android:text="Set"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="English - new words"
            android:textSize="26dp"
            android:layout_marginLeft="26dp"
            android:textColor="#3B82F6"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-black"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_background_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="flashcards"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="23dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/card_icon"
            android:paddingHorizontal="100dp"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_background_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="practice"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="23dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/icon_goal"
            android:paddingHorizontal="100dp"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_background_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="write"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="23dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/icon_write"
            android:paddingHorizontal="100dp"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white">
        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_background_button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="update"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="23dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/baseline_edit_note_24"
            android:paddingHorizontal="100dp"
            ></Button>
    </LinearLayout>
</LinearLayout>