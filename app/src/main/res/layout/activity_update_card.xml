<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreateSet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

<!--        <include layout="@layout/create_set_toolbar" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Name"
            android:textColor="#3B82F6"
            android:textSize="25sp"
            android:fontFamily="@font/bebas_neue"/>

        <EditText
            android:id="@+id/editText_nameSet"
            android:layout_width="363dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/out_line_ele1"
            android:hint="Name"
            android:fontFamily="@font/be_vietnam_pro_regular"
            android:paddingStart="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Description"
            android:textColor="#3B82F6"
            android:textSize="25sp"
            android:fontFamily="@font/bebas_neue"/>

        <EditText
            android:id="@+id/editText_description"
            android:layout_width="363dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/out_line_ele1"
            android:hint="Description"
            android:fontFamily="@font/be_vietnam_pro_regular"
            android:paddingStart="8dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Term"
            android:fontFamily="@font/bebas_neue"
            android:textColor="#3B82F6"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editText_term"
            android:layout_width="332dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/out_line_ele1"
            android:fontFamily="@font/be_vietnam_pro_regular"
            android:hint="Term"
            android:paddingStart="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Definition"
            android:textColor="#3B82F6"
            android:textSize="25sp"
            android:fontFamily="@font/bebas_neue"/>

        <EditText
            android:id="@+id/editText_definition"
            android:layout_width="332dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/out_line_ele1"
            android:fontFamily="@font/be_vietnam_pro_regular"
            android:hint="Definition"
            android:paddingStart="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cards"
            android:layout_width="match_parent"
            android:layout_height="409dp" />
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:srcCompat="@drawable/baseline_add_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:srcCompat="@drawable/baseline_check_24" />
</androidx.constraintlayout.widget.ConstraintLayout>